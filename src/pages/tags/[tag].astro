import Pagination from '../../components/Pagination.astro';
import PostBox from '../../components/PostBox.astro';

export async function getStaticPaths({ paginate }) {
  const allPosts = await Astro.glob('../posts/*.md*');
  const tags = [...new Set(allPosts.map((post)=>post.frontmatter.tags).flat())];
  return tags.flatMap((tag) => {
    const filteredPosts = allPosts.filter((post)=>post.frontmatter.tags.includes(tag));
    const orderByCreateDateTimeDescPosts = filteredPosts.sort((a, b) => 
      new Date(a.frontmatter.create).valueOf() - new Date(b.frontmatter.create).valueOf()
    ).reverse();
  console.log(filteredPosts)
    // return paginate(orderByCreateDateTimeDescPosts,{params: { tag: tag },pageSize: 8});
    return { 
      params: { tag: tag },
      props: { posts: orderByCreateDateTimeDescPosts },
    };
  });
}
const { tag } = Astro.params;
const { posts } = Astro.props;
---
<h1>{tag}</h1>
<div>
  {
    posts.map((post)=><h1>{post.frontmatter.title}</h1>)
  }
</div>