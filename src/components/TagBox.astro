---
interface Props {
  href: string;
  name: string;
  postCount: string;
}

const { href, name, postCount } = Astro.props;
---

<div class="tag-box">
  <h2 class="tag-name">
    <a href={"/tag/" + href}>{name}</a>
  </h2>
  <span class="tag-metadata">
    {postCount} {postCount == "1" ? "Post" : "Posts"} / {href}
  </span>
</div>
<style>
  .tag-box {
    margin: 2.5rem 0;
  }
  .tag-name {
    margin-top: 0;
  }
  .tag-name a {
    text-decoration: none;
    font-size: 2rem;
    line-height: 2rem;
    color: var(--color-content-lead);
  }
  .tag-metadata {
    font-weight: 400;
    font-size: 1rem;
    line-height: 1rem;
    color: var(--color-content-secondary);
  }
</style>
