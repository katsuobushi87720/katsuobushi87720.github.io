---
interface Props {
	title: string;
	description?: string;
}
const { title, description } = Astro.props;
---

<header class="main-header has-cover">
    <div class="content">
        <div class="main-info">
            <h1 class="main-title">{title}</h1>
            <span class="main-description">{description}</span>
        </div>
        <div class="main-cover">
            <img src="/src/assets/MainCover/IMG_2313.jpg" alt={title}>
        </div>
    </div>
</header>

<style>
.main-header{
    padding-top: calc(10rem + 4vw);
    position: relative;
}
.has-cover{
    padding-top: calc(15rem + 8vw);
    background: black;
}
.main-info{
    position: relative;
    padding-bottom: calc(5rem + 4vw);
    text-align: center;
    color: white;
    z-index: 1024;
}
.main-cover{    
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    z-index: 5;
    background: no-repeat scroll center center / cover #000;
    animation: 0.5s ease-in forwards fadein;
    display: flex;
    align-items: center;
}
@keyframes fadein {
    0% {
        opacity: 0.2
    }
    100% {
        opacity: 0.9
    }
}

.main-cover::after{
    content: '';
    display: block;
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 60%;
    background: linear-gradient(to bottom, rgba(0,0,0,0) 0%, rgba(0,0,0,0.333) 100%);
}
.main-cover img{
    position: relative;
    width: 100%;
    height: 100%;
    object-fit: cover;
}
.main-title{
    margin: 0;
    font-size: 3.8rem;
    line-height: 1;
}
.main-description{
    display: block;
    margin-top: 1rem;
    font-size: 1.9rem;
    line-height: 1;
}

</style>